{
  "name": "react-native-skeleton-simpler",
  "version": "1.0.4",
  "description": "A simple and fully customizable React Native component that implements a skeleton-like loader",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "react-native": "src/index.ts",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "lib/",
    "src/"
  ],
  "private": false,
  "keywords": [
    "react native",
    "skeleton",
    "loader",
    "loading",
    "placeholders",
    "animation"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "copyFlow": true
        }
      ],
      "module",
      "typescript"
    ]
  },
  "scripts": { 
    "build": "bob build"
  },
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json",
    "ts",
    "tsx"
  ],
  "author": "Emerson Gomes Rebolsas",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EmersonGomes21/react-native-skeleton-simpler.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EmersonGomes21/react-native-skeleton-simpler/issues"
  },
  "homepage": "https://github.com/EmersonGomes21/react-native-skeleton-simpler#readme",
  "dependencies": {
    "react": "^18.2.0",
    "react-native": "^0.71.8"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/plugin-transform-typescript": "^7.22.11",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.11",
    "@types/react": "^18.2.21",
    "@types/react-native": "^0.72.2",
    "react-native-builder-bob": "^0.21.3",
    "typescript": "^5.2.2"
  }
}
